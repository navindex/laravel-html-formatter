{
    "name": "navindex/laravel-html-formatter",
    "type": "library",
    "description": "Laravel wrapper for the HTML formatter library.",
    "homepage": "https://github.com/navindex/laravel-html-formatter",
    "keywords": [
        "beautify",
        "format",
        "HTML",
        "indent",
        "minify",
        "Navindex",
        "PHP",
        "Laravel"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Miklos Karpati",
            "email": "mk@navindex.com.au",
            "homepage": "https://www.navindex.com.au",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/http": "^8.61",
        "illuminate/support": "^8.61",
        "navindex/html-formatter": "^0.1.0"
    },
    "require-dev": {
        "larapack/dd": "^1.1",
        "phpstan/phpstan": "^0.12.99",
        "phpunit/phpunit": "^9.5",
        "php-coveralls/php-coveralls": "^2.4"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Navindex\\LaravelHtmlFormatter\\HtmlFormatterServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Navindex\\LaravelHtmlFormatter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Navindex\\LaravelHtmlFormatter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": "phpstan analyse",
        "test": "phpunit"
    },
    "scripts-descriptions": {
        "check": "Run static analysis",
        "test": "Run unit tests"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/navindex"
        }
    ]
}
